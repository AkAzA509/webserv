server {
	listen 8080;
	server_name localhost;
	host 0.0.0.0;
	root ./file;
	timeout_time 10000;
	client_max_body_size 5000000;
	index page/index.html;
	error_page 400 error_pages/400.html;
	error_page 404 error_pages/404.html;
	error_page 500 error_pages/500.html;

	location / {
		allow_methods GET POST;
		autoindex on;
	}

	location /cgi-bin {
		root ./file/cgi-bin;
		allow_methods GET POST;
		autoindex off;
		index change_color.sh;
		cgi_pass /usr/bin/bash;
		cgi_ext .sh;
	}

	location /python-cgi {
		root ./file/cgi-bin;
		allow_methods GET POST;
		autoindex on;
		cgi_pass /usr/bin/python3;
		cgi_ext .py;
	}

	location /upload-cgi {
		allow_methods GET POST PUT DELETE;
		root ./file;
		upload_path /put_file;
		autoindex on;
		index cgi-bin/delete.py;
		cgi_pass /usr/bin/python3;
		cgi_ext .py;
	}
}