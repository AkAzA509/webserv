server {
	listen 8080;
	server_name localhost;
	host 0.0.0.0;
	root ./file;
	timeout_time 500;
	client_max_body_size 50000000;
	index page/index.html;
	error_page 408 error_pages/408.html;
	error_page 413 error_pages/413.html;
	error_page 500 error_pages/500.html;

	location / {
		allow_methods GET POST PUT DELETE;
		autoindex on;
	}

	location /fast-cgi {
		root ./file/cgi-bin;
		allow_methods GET POST;
		autoindex off;
		cgi_pass /usr/bin/bash;
		cgi_ext .sh;
	}

	location /concurrent-upload {
		allow_methods GET POST PUT;
		root ./file;
		upload_path /put_file;
		autoindex on;
	}

	location /bulk-delete {
		allow_methods GET DELETE;
		root ./file/put_file;
		autoindex on;
	}
}

server {
	listen 8081;
	server_name stress2.test;
	host 127.0.0.1;
	root ./file;
	timeout_time 200;
	client_max_body_size 1000000;
	index page/index.html;

	location / {
		allow_methods GET POST;
		autoindex on;
	}
}