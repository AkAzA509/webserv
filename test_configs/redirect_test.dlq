server {
	listen 8080;
	server_name localhost;
	host 0.0.0.0;
	root ./file;
	timeout_time 5000;
	client_max_body_size 2000000;
	index page/index.html;
	error_page 404 error_pages/404.html;

	location / {
		allow_methods GET POST;
		autoindex on;
	}

	location /redirect-me {
		allow_methods GET POST;
		root ./file;
		return /;
	}

	location /post-and-redirect {
		allow_methods GET POST;
		root ./file;
		upload_path /post_file;
		return /;
	}

	location /auto-redirect {
		allow_methods GET;
		root ./file/page;
		autoindex off;
		return /cookie;
	}
}