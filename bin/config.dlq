server {
	listen 8080;
	server_name localhost;
	host 127.0.0.1;
	root /home/macorso/Projects/webserv/file;
	#client_max_body_size 30000;
	index page/index.html;
	error_page 404 error_pages/404.html;
	error_page 405 error_pages/405.html;

	location / {
		allow_methods GET HEAD POST;
		autoindex on;
	}
	location /cookie-test {
		index page/cookie-test.html
		allow_methods GET HEAD POST;
		autoindex off;
	}
	location /upload {
		index page/cookie-test.html
		allow_methods GET DELETE POST;
		autoindex off;
	}
	location /put_file {
		allow_methods DELETE PUT;
		autoindex off;
	}
	location /post_file {
		allow_methods DELETE GET POST;
		autoindex off;
	}
